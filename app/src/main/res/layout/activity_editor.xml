<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".EditorActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_editor_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            android:elevation="4dp"
            app:title="@string/app_name"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <HorizontalScrollView
            android:id="@+id/activity_editor_horizontal_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarThumbHorizontal="@android:color/transparent"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:layout_marginBottom="@dimen/inner_space">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/activity_editor_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bold"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>

                <ImageButton
                    android:id="@+id/activity_editor_italics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_italic"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_underline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_underline"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_undo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_undo"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_redo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_redo"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_align_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_align_left"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_align_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_align_center"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_align_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_align_right"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
                <ImageButton
                    android:id="@+id/activity_editor_text_highlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_highlight"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/inner_space"/>
            </LinearLayout>

        </HorizontalScrollView>
    </android.support.design.widget.AppBarLayout>


    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/content_main_editor"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/activity_editor_appbar">
    </jp.wasabeef.richeditor.RichEditor>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_editor_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/fab_margin"/>

</android.support.constraint.ConstraintLayout>